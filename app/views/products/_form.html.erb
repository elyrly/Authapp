<%= form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>


    <div class="control-group">
      <%= f.label :Model, :class => 'control-label' %>
       <div class="controls">
       <em><%= f.text_field :name, :class => 'text_field', placeholder: "Toyota Camry" %></em>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :"Price", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :price, :class => 'text_field', placeholder: "$20,000" %>
      </div>
    </div>

    <div class="control-group" >
      <%= f.label :"Date", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :purchased, :class => 'text_field', placeholder:"8/11/1982" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :"Zip Code", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :zip, :class => 'text_field', placeholder: "90501" %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-default' %>



    </div>
  </fieldset>
<% end %>
